let nome = "Vanderley";

console.log("Olá, " + nome + "!");
alert(`Olá, ${nome}!`);

let linguagemFavorita = prompt("Qual a linguagem de programação que você mais gosta?");
console.log("A linguagem de programação que você mais gosta é: " + linguagemFavorita);

// Definindo as variáveis valor1 e valor2 com valores numéricos
let valor1 = 20;
let valor2 = 7;

let resultado = valor1 + valor2;
// Mostrando a mensagem no console
console.log("A soma de " + valor1 + " e " + valor2 + " é igual a " + resultado + ".");

let resultado2 = valor1 - valor2; 
console.log(`A diferença entre ${valor1} e ${valor2} é igual a ${resultado2}`);
// so lembrando que existem 2 formas dentro do console que seria com aspas ou sifrão

let idade = prompt("Por favor, insira sua idade:");

// Verifica se a idade é válida
if (!isNaN(idade)) {
    if (idade >= 18) {
        console.log("Você é maior de idade.");
    } else {
        console.log("Você é menor de idade.");
    }
} else {
    console.log("Por favor, insira um número válido.");
};

let numero = Number(prompt("Digite um número:"));

if (isNaN(numero)) {
    alert("Por favor, digite um número válido.");
} 
else if (numero > 0) {
    alert("O número é positivo.");
} 
else if (numero < 0) {
    alert("O número é negativo.");
} 
else {
    alert("O número é zero.");
};

let numero2 = 1;

while (numero2 <= 10) {
    console.log(numero2);
    numero2++;
}
